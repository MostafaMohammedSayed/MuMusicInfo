<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            style="@style/promptMessage"
            android:background="@color/purple3"
            android:text="@string/prompt_user" />

        <TextView
            android:id="@+id/jazz"
            style="@style/genreStyle"
            android:background="@color/purple4"
            android:text="@string/jazz_text" />

        <TextView
            android:id="@+id/blues"
            style="@style/genreStyle"
            android:background="@color/purple5"
            android:text="@string/blues_text" />

        <TextView
            android:id="@+id/country"
            style="@style/genreStyle"
            android:background="@color/purple6"
            android:text="@string/country_text" />

        <TextView
            android:id="@+id/classic"
            style="@style/genreStyle"
            android:background="@color/purple7"
            android:text="@string/classic_text" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/musicman_height"
            android:background="@color/black"
            android:contentDescription="@string/image_description"
            android:src="@drawable/musicman" />


    </LinearLayout>

</ScrollView>