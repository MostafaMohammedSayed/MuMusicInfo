<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:text="@string/prompt_user"
        style="@style/promptMessage"
        android:background="@color/purple3"
        />

    <TextView
        android:text="@string/jazz_text"
        style="@style/genreStyle"
        android:background="@color/purple4"
        />

    <TextView
        android:text="@string/blues_text"
        style="@style/genreStyle"
        android:background="@color/purple5"
        />

    <TextView
        android:text="@string/country_text"
        style="@style/genreStyle"
        android:background="@color/purple6"
        />

    <TextView
        android:text="@string/classic_text"
        style="@style/genreStyle"
        android:background="@color/purple7"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/musicman"
        android:background="@color/black"
        />


</LinearLayout>